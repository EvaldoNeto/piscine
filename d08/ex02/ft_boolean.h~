#ifndef FT_BOOLEAN_H
# define FT_BOOLEAN_H

# include <unistd.h>
# define EVEN(nbr) !(nbr % 2)
# define EVEN_MSG "I have an even number of arguments.\n\n"
# define ODD_MSG "I have an odd number of arguments.\n\n"
# define TRUE 1
# define FALSE 0
# define SUCCESS 0
# define T_BOOL int

typedef int	t_bool;

#endif
